@model Marquise_Web.UI.areas.CRM.Models.AccountVM

@{
    ViewBag.Title = "Index";
    Layout = "~/areas/CRM/Views/Shared/_Layout.cshtml";
    var industries = ViewBag.Industries as List<Marquise_Web.UI.areas.CRM.Models.Industry> ?? new List<Marquise_Web.UI.areas.CRM.Models.Industry>();
    var selectedIndustryId = Model?.IndustryCode;
}
 

<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row mt-3 justify-content-center">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <form>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label">نام</label>
                                <div class="col-lg-9">
                                    <input class="form-control" type="text" value="@Model.Name">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label">نام مدیریت</label>
                                <div class="col-lg-9">
                                    <input class="form-control" type="text" value="@Model.ManagementName">
                                </div>
                            </div>
                            
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label">صنعت</label>
                                <div class="col-lg-9">
                                    <select name="IndustryCode" id="industrySelect" class="form-control">
                                        <option value="">صنعت کاری خود را انتخاب کنید</option>
                                        @foreach (var industry in industries)
                                        {
                                            <option value="@industry.Id" selected="@(Model.IndustryCode == industry.Id)">
                                                @industry.Title
                                            </option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label">آدرس</label>
                                <div class="col-lg-9">
                                    <input class="form-control" type="text" value="@Model.ShippingAddress" placeholder="Street">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label"></label>
                                <div class="col-lg-6">
                                    <input class="form-control" type="text" value="@Model.cituu__C" placeholder="شهر">
                                </div>
                                <div class="col-lg-3">
                                    <input class="form-control" type="text" value="@Model.mahale__C" placeholder="محله">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label">تلفن</label>
                                <div class="col-lg-9">
                                    <input class="form-control" type="text" value="@Model.Telephone" placeholder="02144556677">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label">موبایل</label>
                                <div class="col-lg-9">
                                    <input class="form-control" value="@Model.Mobile" placeholder="09123456789">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label"></label>
                                <div class="col-lg-9">
                                    <input type="button" class="btn btn-primary" value="ذخیره اصلاحات">
                                    <input type="reset" class="btn btn-secondary" value="انصراف">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

