
@{
    Layout = "~/Areas/CRM/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
    ViewData["IsLoginPage"] = true;
}


<section class="login-page pt50 pb50 dir-rtl">
    <div class="v-center m-auto">
        <div class="login-form-div">
            <h4 class="text-center color-black">ورود به حساب کاربری</h4>
            <div class="form-block">
                <form id="Login-form" onsubmit="return handleSentOTPFormSubmit(event);" novalidate>
                    @Html.AntiForgeryToken()
                    <div class="fieldsets row dir-center d-flex justify-content-center">
                        <div class="col-md-8 form-group pt-5 dir-center text-center">
                            <label class="form-check-label font-14" for="PhoneNumber">
                                لطفا شماره تماس خود را وارد کنید.
                            </label>
                        </div>
                        <div class="d-flex justify-content-center flex-row dir-ltr col-md-8 form-group align-content-center align-items-center">
                            <p class="form-check-label font-15 px-2 color-black">+98</p>
                            <input class="dir-center font-15 h-75 pt-3" id="PhoneNumber" name="شماره تماس" type="text" placeholder="9121234567" autocomplete="PhoneNumber" required>
                            <div class="help-block with-errors"></div>
                        </div>

                    </div>
                    <div class="fieldsets row mt20 d-flex flex-column v-center">
                        <div class="col-md-8 form-group v-center mb-3 dir-center">
                            <button type="submit" class="outline-btn w-75 font-14">دریافت کد</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/Areas/CRM/Scripts/CRM/Auth.js"></script>
}