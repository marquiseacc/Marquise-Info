
@{
    Layout = "~/Areas/CRM/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
    ViewData["IsLoginPage"] = true;
}


<section class="login-page pt50 pb50 dir-rtl">
    <div class="v-center m-auto">
        <div class="login-form-div">
            <h4 class="mb40 text-center">ورود به حساب کاربری</h4>
            <div class="form-block">
                <form id="Login-form" onsubmit="return handleLoginFormSubmit(event);" novalidate>
                    <div class="fieldsets row">
                        <div class="col-md-12 form-group">
                            <input id="username" name="نام کاربری" type="text" placeholder="نام کاربری" autocomplete="username" required>
                            <div class="help-block with-errors"></div>
                        </div>
                        <div class="col-md-12 form-group">
                            <input id="password" name="رمز عبور" type="password" placeholder="رمز عبور" autocomplete="current-password" required>
                            <div class="help-block with-errors"></div>
                        </div>
                        <div class="col-md-12">
                            <input type="checkbox" id="rememberMe">
                            <label class="form-check-label" for="rememberMe">
                                مرا به خاطر بسپار
                            </label>
                        </div>
                    </div>
                    <div class="fieldsets row mt20 d-flex flex-column v-center">
                        <div class="col-md-8 form-group v-center mb-3 dir-center">
                            <button type="submit" class="btn-main bg-btn5 lnk white-color w-100">ورود<i class="fas fa-chevron-left fa-icon pr-10"></i><span class="circle"></span></button>
                        </div>
                        <div class="col-md-8 form-group v-center dir-center line-h-20 font-14"><a href="~/CRM/Account/ForgetPassword" class="psforgt">رمز عبور را فراموش کرده‌اید؟</a></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/Areas/CRM/Scripts/CRM/Cookies.js" defer></script>
    <script src="~/Areas/CRM/Scripts/CRM/crypto-js.js"></script>
    <script src="~/Areas/CRM/Scripts/CRM/Login.js"></script>
    }