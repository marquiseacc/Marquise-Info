
@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Areas/CRM/Views/Shared/_Layout.cshtml";
    ViewData["IsLoginPage"] = true;
}


<section class="login-page pt50 pb50 dir-rtl">
    <div class="v-center m-auto">
        <div class="login-form-div">
            <h4 class="mb80 text-center">بازیابی رمز عبور</h4>
            <div class="form-block d-flex align-items-center">
                <form id="Login-form" onsubmit="return handleForgetPassFormSubmit(event);" novalidate>
                    <div class="fieldsets row">
                        <div class="col-md-12 form-group">
                            <div class="line-h-20 mb20">لطفا شماره تماس خود را وارد کنید.</div>
                        </div>
                        <div class="col-md-12 form-group pb20">
                            <input id="phone" name="شماره تماس" placeholder="09123456789" required>
                            <div id="phone-error" class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="fieldsets row mt20 d-flex flex-column v-center">
                        <div class="col-md-8 form-group v-center mb-3 dir-center">
                            <button type="submit" class="btn-main bg-btn5 lnk white-color w-100">تایید<i class="fas fa-chevron-left fa-icon pr-10"></i><span class="circle"></span></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/Areas/CRM/Scripts/CRM/ForgetPassword.js" defer></script>
}