<!--Start Enquire Form-->
<section class="contact-page pt130 pb80 dir-rtl bg-gradient3">
    <div class="container">
        <div class="row justify-content-center niwax23form shadow">
            <div class="col-lg-12 v-center">
                <div class="common-heading text-l">
                    <h2 class="mt0 mb0">لطفا پیام خود را ارسال کنید.</h2>
                    <p class="mb60 mt20">در اولین فرصت پاسخ برای شما ارسال می‌شود.</p>
                </div>
                <div class="form-block">
                    <form onsubmit="return handleOpportunityFormSubmit(event);" class="shake" novalidate>
                        <div class="row">
                            <div class="form-group col-sm-6 pb-4">
                                <input type="text" id="name" placeholder="نام" required>
                                <div class="help-block with-errors"></div>
                            </div>
                            <div class="form-group col-sm-6 pb-4">
                                <input type="text" id="birthday" placeholder="تاریخ تولد" required>
                                <div id="birthday-error" class="help-block with-errors"></div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-6 pb-4">
                                <input type="text" id="email" placeholder="ایمیل" required>
                                <div id="email-error" class="help-block with-errors"></div>
                            </div>
                            <div class="form-group col-sm-6 pb-4">
                                <input type="text" id="phone" placeholder="شماره تماس" required>
                                <div id="phone-error" class="help-block with-errors"></div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12 pb-4">
                                <input type="text" id="address" placeholder="آدرس" required>
                                <div class="help-block with-errors"></div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12 pb-4">
                                <input id="file" type="file">
                            </div>
                        </div>
                        <div class="form-group">
                            <textarea id="message" rows="5" placeholder="لطفا پیام خود را وارد کنید" required></textarea>
                            <div class="help-block with-errors"></div>
                        </div>
                        <div class="d-flex justify-content-end col-lg-12 col-sm-12">
                            <button type="submit" class="btn-main bg-btn5 lnk white-color mx-3">
                                ارسال<i class="fas fa-chevron-left fa-icon mr15"></i><span class="circle"></span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!--End Enquire Form-->

@section Scripts {
    <script src="~/Scripts/Views/Opportunity.js"></script>
}